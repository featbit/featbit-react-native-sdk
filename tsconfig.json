{
  "compilerOptions": {
    "target": "ES2017",
    "module": "ES6",
    "lib": ["es6", "dom"],
    "types": ["node"],
    "outDir": "dist",
    "rootDir": "src",
    "strict": true,
    "declaration": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "noImplicitOverride": true,
    "allowJs": true,
    "skipLibCheck": true,
    "jsx": "react-jsx"
  },
  "include": ["src"]
}